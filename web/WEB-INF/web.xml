<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <filter>
        <filter-name>AuthorisationFilter</filter-name>
        <filter-class>org.tclone.filters.AuthorisationFilter</filter-class>
    </filter>

    <servlet>
        <servlet-name>AuthorisationServlet</servlet-name>
        <servlet-class>org.tclone.servlets.AuthorisationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>org.tclone.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TweetServlet</servlet-name>
        <servlet-class>org.tclone.servlets.TweetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FollowServlet</servlet-name>
        <servlet-class>org.tclone.servlets.FollowServlet</servlet-class>
    </servlet>
</web-app>
